#include<iostream>
using namespace std;
int main()
{
    int ar[100];
    int n;
    int k, c = 0;
    cin >> n >> k;

    for (int i = 0; i < n; i++)
    {
        cin>>ar[i];
    }
    for (int i = 0; i < n; i++)
    {
        if (ar[i] >= ar[k - 1] && ar[i] > 0)
        {
            c++;
        }
    }
    cout<<c<<"\n";
    return 0;
}
