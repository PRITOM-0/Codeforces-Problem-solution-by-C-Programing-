#include<iostream>
#include<string>
using namespace std;
int main()
{
    int n;
    string text;
    cin>>n;
    while (n--)
    {
      cin>>text;
      if (text.length()>10)
      {
        cout<<text[0]<<text.length()-2<<text[text.length()-1]<<endl;
      }else{
        cout<<text<<endl;
      }
        
    }
 return 0;
}
